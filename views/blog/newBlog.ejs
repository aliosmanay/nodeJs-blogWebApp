  <script>
      $(document).ready(function(){

        $("#myButton").click(function(){

            var blogTitle=$("#blogTitle").val();
            var blogComSentence= $("#blogComSentence").val();
            var blogComImage= $("#blogComImage").val();
            var blog = CKEDITOR.instances.myTextArea.getData();



            var data={
                blogTitle           :blogTitle,
                blogComSentence     :blogComSentence,
                blogComImage        :blogComImage,
                blog                :blog
            }

            $.post('addNewBlog', {data:data})
            .then(function(addedBlog){
                console.log(addedBlog);
            })





           // console.log(blogTitle + "======"+ blogComSentence+ "====="+ blogComImage+ "===="+ blog);

           
        });


      });

  
  
  </script>

